<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:height="8dp"
                android:width="8dp"/>
            <gradient
                android:angle="0"
                android:startColor="#EFB021"
                android:endColor="#DB4435"/>
        </shape>
    </item>
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:top="3.5dp"
        android:bottom="3.5dp"
        android:left="3.5dp"
        android:right="3.5dp"
        android:drawable="@drawable/img_question_mark"/>
</layer-list>